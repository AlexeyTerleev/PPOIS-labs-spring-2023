<UserContentScreen>:

    size_hint: 0.6, 0.7
    radius: [20, 20, 20, 20]
    md_bg_color: '#212121'

    MDBoxLayout:
        orientation: 'vertical'
        radius: root.radius
        md_bg_color: '#212121'

        MDBoxLayout:
            size_hint: 1, 0.3
            md_bg_color: root.md_bg_color
            radius: root.radius

            MDBoxLayout:
                size_hint: 0.4, 1

                canvas:
                    Color:
                        rgb: 1, 1, 1
                    Ellipse:
                        pos: self.x + self.width / 2 - 40, self.y + self.height / 2 - 40
                        size: 80, 80
                        source: root.icon


            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 0.6, 1
                padding: 20
                spacing: 20

                MDLabel:
                    pos_hint_x: 0.5
                    text: root.name
                    halign: 'left'
                    font_size: 30

                MDLabel:
                    text: root.surname
                    halign: 'left'
                    font_size: 24

                MDLabel:
                    text: root.patronym
                    halign: 'left'
                    font_size: 24

                MDLabel:
                    text: root.group
                    halign: 'left'
                    font_size: 20

        MDBoxLayout:
            size_hint: 1, 0.3
            padding: 20, 20

            MDLabel:
                size_hint: 1, 1
                text: root.description

        MDBoxLayout:
            id: marks_table_layout
            size_hint: 1, 0.4
            md_bg_color: root.md_bg_color
            radius: root.radius